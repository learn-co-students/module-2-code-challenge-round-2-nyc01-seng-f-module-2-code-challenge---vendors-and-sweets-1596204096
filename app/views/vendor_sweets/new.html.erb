<h1> Create Vendor Sweet </h1>

<% if flash[:errors] %>
<% flash[:errors].each do |e| %>
  <%= e %>
<br>
<% end %>
<% end %>

<%= form_for @vendor_sweet do |f| %> 
  <%= f.label :vendor_id %>
  <%= f.collection_select :vendor_id, @vendors, :id, :name %>
  <%= f.label :sweet_id %>
  <%= f.collection_select :sweet_id, @sweets, :id, :name %>
  <%= f.label :price %>
  <%= f.number_field(:price, options = {min: 1, max: 100}) %>
<%= f.submit  %> 
<% end %>



